<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_mano" model="ir.ui.view">
            <field name="name">sale.order.form.mano</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_information']" position="inside">
                    <h2>Mano Informations</h2>
                    <group>
                        <group>
                            <field name="date_order_mano"/>
                            <field name="is_mmf"/>

                        </group>
                        <group>
                            <field name="status_mano"/>
                            <field name="update_order_mano"/>
                        </group>

                        <group>
                            <field name="relay_id"/>
                            <field name="relay_name"/>
                            <field name="relay_address"/>
                        </group>
                        <group>
                            <field name="relay_zipcode"/>
                            <field name="relay_city"/>
                            <field name="relay_country"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
